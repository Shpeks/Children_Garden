@model IEnumerable<Diplom.Models.PreviousBalance>

<p>
    <a asp-controller="VaultNotes" asp-action="Index" asp-route-IdVault="@ViewBag.IdVault">Вернуться к списку</a>
</p>

<form asp-controller="PreviousBalances" asp-action="Index" method="get" class="">
    <input type="hidden" name="idVaultNote" value="@ViewBag.IdVaultNote" />
    <div class="input-group">
        <input class="form-control py-2 border-right-0 border" type="search" id="example-search-input" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Поиск по названию">
        <span class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Поиск</button>
        </span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Продукт
            </th>
            <th>
                Начальный остаток
            </th>
            
            <th>
                Конечный остаток
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Food.NameFood
            </td>
            <td>
                @item.StartBalance
            </td>
            <td>
                @item.EndBalance
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>

