@model IEnumerable<Diplom.Models.Arrival>

<p>
    <a asp-controller="VaultNotes" asp-action="Index" asp-route-IdVault="@ViewBag.IdVault">Вернуться к списку</a>
</p>

<form asp-controller="Arrivals" asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchString">Поиск:</label>
        <input type="text" id="searchString" name="searchString" class="form-control" value="@ViewBag.CurrentFilter" />
        <input type="hidden" name="idVaultNote" value="@ViewBag.IdVault" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Поиск</button>
    </div>
</form> 

@{
    DateTime date = DateTime.MinValue; // Инициализируем переменную даты
}


<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Food.NameFood
                </td>
                <td>
                    @item.FoodCount
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>